<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up.Ime"
        android:id="@+id/test"
        android:textSize="30dp"
        android:layout_marginBottom="108dp"
        android:layout_above="@+id/Prijava"
        android:layout_toLeftOf="@+id/Prijava"
        android:layout_toStartOf="@+id/Prijava" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geslo"
        android:id="@+id/test2"
        android:textSize="30dp"
        android:layout_above="@+id/Prijava"
        android:layout_alignLeft="@+id/test"
        android:layout_alignStart="@+id/test"
        android:layout_marginBottom="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijava"
        android:id="@+id/Prijava"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="227dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UpIme"
        android:layout_alignTop="@+id/test"
        android:layout_alignLeft="@+id/Prijava"
        android:layout_alignStart="@+id/Prijava"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:width="170dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Geslo"
        android:layout_alignBottom="@+id/test2"
        android:layout_alignLeft="@+id/UpIme"
        android:layout_alignStart="@+id/UpIme"
        android:width="170dp"/>
</RelativeLayout>